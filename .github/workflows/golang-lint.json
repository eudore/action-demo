{
  "formatters": {
    "enable": [
      "gci",
      "gofmt",
      "gofumpt",
      "goimports"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "funccreator.go",
        "funcdefine.go",
        "policy/.*.go",
        "third_party$",
        "builtin$",
        "examples$"
      ]
    }
  },
  "issues": {
    "max-same-issues": 10
  },
  "linters": {
    "default": "none",
    "enable": [
      "asasalint",
      "asciicheck",
      "bidichk",
      "bodyclose",
      "canonicalheader",
      "copyloopvar",
      "cyclop",
      "decorder",
      "depguard",
      "dogsled",
      "dupl",
      "dupword",
      "durationcheck",
      "errcheck",
      "errchkjson",
      "errname",
      "errorlint",
      "exptostd",
      "fatcontext",
      "forbidigo",
      "funlen",
      "ginkgolinter",
      "gocheckcompilerdirectives",
      "gochecknoinits",
      "gochecksumtype",
      "gocognit",
      "goconst",
      "gocritic",
      "gocyclo",
      "godot",
      "godox",
      "goheader",
      "gomoddirectives",
      "gomodguard",
      "goprintffuncname",
      "gosec",
      "gosmopolitan",
      "govet",
      "grouper",
      "iface",
      "importas",
      "inamedparam",
      "ineffassign",
      "intrange",
      "loggercheck",
      "maintidx",
      "makezero",
      "mirror",
      "misspell",
      "musttag",
      "nakedret",
      "nestif",
      "nilerr",
      "nilnesserr",
      "nilnil",
      "noctx",
      "nolintlint",
      "nosprintfhostport",
      "paralleltest",
      "perfsprint",
      "prealloc",
      "predeclared",
      "promlinter",
      "protogetter",
      "reassign",
      "revive",
      "rowserrcheck",
      "sloglint",
      "spancheck",
      "sqlclosecheck",
      "staticcheck",
      "testableexamples",
      "testifylint",
      "testpackage",
      "thelper",
      "tparallel",
      "unconvert",
      "unparam",
      "unused",
      "usestdlibvars",
      "usetesting",
      "wastedassign",
      "whitespace",
      "zerologlint"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "funccreator.go",
        "funcdefine.go",
        "protobuf.go",
        "policy/.*.go",
        "third_party$",
        "builtin$",
        "examples$"
      ],
      "presets": [
        "comments",
        "common-false-positives",
        "legacy",
        "std-error-handling"
      ]
    },
    "settings": {
      "cyclop": {
        "max-complexity": 15
      },
      "gocyclo": {
        "min-complexity": 15
      },
      "funlen": {
        "statements": 50
      },
      "depguard": {
        "rules": {
          "main": {
            "allow": [
              "$gostd",
              "github.com/eudore/eudore"
            ]
          }
        }
      },
      "gosec": {
        "excludes": ["G115"]
      },
      "staticcheck": {
        "checks": ["all", "-QF1008"]
      }
    }
  },
  "version": "2"
}
